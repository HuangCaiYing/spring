<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!--Spring框架  IOC特性 控制反转-->
    <bean id="zhao" class="com.abc.ssm.spring.Person">
        <property name="pid" value="1001"></property>
        <property name="pname" value="ZHAOSAN"/>
    </bean>
    <bean id="wang" class="com.abc.ssm.spring.Person">
        <constructor-arg index="0" value="1002"/>
        <constructor-arg index="1" value="WANGWU"/>
    </bean>
</beans>